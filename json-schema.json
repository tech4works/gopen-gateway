    "http-header-key": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9!#$%&'*+-.^_|~]+$"
    },
    "http-query-key": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9\\-._~]+$"
    },
    "json-path": {
      "type": "string",
      "minimum": 1,
      "pattern": "^[\\w-]+(\\.[\\w-]+)*$"
